{
	"data_sprites":{
		"chat_people_default":[
			{
				"actions":[
					{ "trigger":"load", "action":"background_people = " },
					{ "trigger":"interval", "conditional":"0.0025 > $random", "action":"chat_people = chat_people_default_1" }
				]
			}
		],
		"chat_people_default_1":[
			{
				"layer":{ "geometry":"10% 5% 80% 20% 1", "shape":"10px", "alpha":"0.75", "color":"#ffffff" },
				"audio":{ "sound":"data/default_people/new.wav", "volume":"0.5", "loop":"false", "id":"people" },
				"text":{
					"color":"#000000", "size":"100%", "content":"Person 1 wants to see you, about apples."
				},
				"actions":[
					{ "trigger":"load", "action":"background_people = " },
					{ "trigger":"load", "delay":"10", "action":"chat_people = " }
				]
			},
			{
				"layer":{ "geometry":"10% 20% 40% 5% 1", "shape":"10px", "alpha":"0.75", "color":"#00aa00" },
				"text":{
					"align":"center", "color":"#ffffff", "size":"100%", "content":"Accept"
				},
				"actions":[
					{ "trigger":"click", "conditional":"$money >= 0.00001", "action":"chat_people = chat_people_default_1_available" },
					{ "trigger":"click", "conditional":"$money < 0.00001", "action":"chat_people = chat_people_default_1_unavailable" }
				]
			},
			{
				"layer":{ "geometry":"50% 20% 40% 5% 1", "shape":"10px", "alpha":"0.75", "color":"#aa0000" },
				"text":{
					"align":"center", "color":"#ffffff", "size":"100%", "content":"Reject"
				},
				"actions":[
					{ "trigger":"click", "action":"chat_people = " }
				]
			}
		],
		"chat_people_default_1_available":[
			{
				"layer":{ "geometry":"10% 5% 80% 40% 1", "shape":"10px", "alpha":"0.75", "color":"#ffffff" },
				"audio":{ "sound":"data/default_people/1.wav", "volume":"0.5", "loop":"false", "id":"people" },
				"text":{
					"color":"#000000", "size":"100%", "content":[
						"Greetings, $game_name from $info_browser_codename! Would you like to buy some apples? Only 10$ for 5!"
					]
				},
				"actions":[
					{ "trigger":"load", "action":"background_people = background_people_default_1_1" },
					{ "trigger":"load", "delay":"20", "action":"chat_people = " }
				]
			},
			{
				"layer":{ "geometry":"10% 40% 40% 5% 1", "shape":"10px", "alpha":"0.75", "color":"#aa0000" },
				"text":{
					"align":"center", "color":"#ffffff", "size":"100%", "content":"Don't buy"
				},
				"actions":[
					{ "trigger":"click", "action":"chat_people = chat_people_default_1_no" }
				]
			},
			{
				"layer":{ "geometry":"50% 40% 40% 5% 1", "shape":"10px", "alpha":"0.75", "color":"#00aa00" },
				"text":{
					"align":"center", "color":"#ffffff", "size":"100%", "content":"Buy"
				},
				"actions":[
					{ "trigger":"click", "conditional":"$money >= 0.00001", "action":"chat_people = chat_people_default_1_yes" }
				]
			},
			{
				"layer":{ "geometry":"10% 35% 40% 2.5% 1", "shape":"10px", "alpha":"1.0", "gradient":{ "value":"$money", "color1":"#aaaa00", "color2":"#111100", "direction":"right" } },
				"text":{ "content":"Money: $money$1000000 $", "align":"center", "color":"#ffffff", "size":"75%" }
			},
			{
				"layer":{ "geometry":"50% 35% 40% 2.5% 1", "shape":"10px", "alpha":"1.0", "gradient":{ "value":"$stock_apple", "color1":"#00aa00", "color2":"#001100", "direction":"right" } },
				"text":{ "content":"Stock: $stock_apple$100 apples", "align":"center", "color":"#ffffff", "size":"75%" }
			}
		],
		"chat_people_default_1_unavailable":[
			{
				"layer":{ "geometry":"10% 5% 80% 40% 1", "shape":"10px", "alpha":"0.75", "color":"#ffffff" },
				"audio":{ "sound":"data/default_people/1_no.wav", "volume":"0.5", "loop":"false", "id":"people" },
				"text":{
					"color":"#000000", "size":"100%", "content":[
						"Greetings, $game_name. I was going to sell you 5 apples for 10$, but it doesn't seem like you have the money. Maybe later?"
					]
				},
				"actions":[
					{ "trigger":"load", "action":"background_people = background_people_default_1_1" },
					{ "trigger":"load", "delay":"5", "action":"chat_people = " }
				]
			},
			{
				"layer":{ "geometry":"10% 40% 80% 5% 1", "shape":"10px", "alpha":"0.75", "color":"#aaaa00" },
				"text":{
					"align":"center", "color":"#ffffff", "size":"100%", "content":"Dismiss"
				},
				"actions":[
					{ "trigger":"click", "action":"chat_people = " }
				]
			}
		],
		"chat_people_default_1_no":[
			{
				"layer":{ "geometry":"10% 5% 80% 40% 1", "shape":"10px", "alpha":"0.75", "color":"#ffffff" },
				"audio":{ "sound":"data/default_people/1_no.wav", "volume":"0.5", "loop":"false", "id":"people" },
				"text":{
					"color":"#000000", "size":"100%", "content":[
						"Okay... maybe later!"
					]
				},
				"actions":[
					{ "trigger":"load", "delay":"5", "action":"chat_people = " }
				]
			},
			{
				"layer":{ "geometry":"10% 40% 80% 5% 1", "shape":"10px", "alpha":"0.75", "color":"#aaaa00" },
				"text":{
					"align":"center", "color":"#ffffff", "size":"100%", "content":"Dismiss"
				},
				"actions":[
					{ "trigger":"click", "action":"chat_people = " }
				]
			}
		],
		"chat_people_default_1_yes":[
			{
				"layer":{ "geometry":"10% 5% 80% 40% 1", "shape":"10px", "alpha":"0.75", "color":"#ffffff" },
				"audio":{ "sound":"data/default_people/1_yes.wav", "volume":"0.5", "loop":"false", "id":"people" },
				"text":{
					"color":"#000000", "size":"100%", "content":[
						"Here you go. Thanks!"
					]
				},
				"actions":[
					{ "trigger":"load", "action":"$money -= 0.00001" },
					{ "trigger":"load", "action":"$stock_apple += 0.05" },
					{ "trigger":"load", "delay":"5", "action":"chat_people = " }
				]
			},
			{
				"layer":{ "geometry":"10% 40% 80% 5% 1", "shape":"10px", "alpha":"0.75", "color":"#aaaa00" },
				"text":{
					"align":"center", "color":"#ffffff", "size":"100%", "content":"Dismiss"
				},
				"actions":[
					{ "trigger":"click", "action":"chat_people = " }
				]
			}
		],
		"background_people_default":[{}],
		"background_people_default_1_1":[
			{ "layer":{ "geometry":"25% 50% 50% 50% 1", "alpha":"1.00", "image":"url(data/default_people/people_1_1.png)" } }
		],
		"background_people_default_1_2":[
			{ "layer":{ "geometry":"25% 50% 50% 50% 1", "alpha":"1.00", "image":"url(data/default_people/people_1_2.png)" } }
		]
	},
	"mods_people":{
		"default_people":{
			"sprites":{
				"chat_people":"chat_people_default",
				"background_people":"background_people_default"
			},
			"variables":{
				"money":{"value":"0.00005" }
			}
		}
	}
}
