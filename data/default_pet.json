	"data_sprites":{
		"pet_default_bars":[
			{
				"layer":{ "geometry":"0% 0% 100% 2.5% 1", "shape":"10px", "alpha":"1.0", "gradient":{ "value":"$health", "color1":"#aa0000", "color2":"#110000", "direction":"right" } },
				"text":{ "content":"Health: $health$100%", "align":"center", "color":"#ffffff", "size":"75%" }
			},
			{
				"layer":{ "geometry":"0% 2.5% 100% 2.5% 1", "shape":"10px", "alpha":"1.0", "gradient":{ "value":"$food", "color1":"#aaaa00", "color2":"#111100", "direction":"right" } },
				"text":{ "content":"Food: $food$100%", "align":"center", "color":"#ffffff", "size":"75%" }
			}
		],
		"pet_default_bars_food":[
			{
				"layer":{ "geometry":"0% 5% 100% 2.5% 1", "shape":"10px", "alpha":"1.0", "gradient":{ "value":"$hype_food", "color1":"#00aaaa", "color2":"#001111", "direction":"right" } },
				"text":{ "content":"Excitement: $hype_food$100%", "align":"center", "color":"#ffffff", "size":"75%" }
			}
		],
