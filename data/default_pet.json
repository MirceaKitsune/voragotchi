		"pet_default_baby_chat_apple_hype_3":[
			{
				"layer":{ "geometry":"10% 10% 80% 20% 2", "shape":"10px", "alpha":"0.75", "color":"#ffffff" },
				"text":{
					"color":"#000000", "size":"100%", "content":[
						"Hover 3"
					]
				},
				"actions":[
					{ "trigger":"load", "action":"pet_chat = ", "delay":"10" },
					{ "trigger":"click", "action":"pet_chat = " }
				]
			}
		],
		"pet_default_baby_chat_apple_eat":[
			{
				"layer":{ "geometry":"10% 10% 80% 20% 2", "shape":"10px", "alpha":"0.75", "color":"#ffffff" },
				"text":{
					"color":"#000000", "size":"100%", "content":[
						"Eating"
					]
				},
				"actions":[
					{ "trigger":"load", "action":"pet_chat = ", "delay":"10" },
					{ "trigger":"click", "action":"pet_chat = " }
				]
			}
		],
		"pet_default_baby_interact":[
			{
				"actions":[
					{ "trigger":"load", "action":"pet_bars_food = " },
					{ "trigger":"load", "action":"pet_background = pet_default_baby_background" },
					{ "trigger":"interval", "conditional":"actions_button_apple == actions_default_button_apple_selected", "action":"pet_interact = pet_default_baby_interact_apple_hype_0" }
				]
			}
		],
		"pet_default_baby_interact_apple_hype_0":[
			{
				"layer":{ "geometry":"40% 55% 25% 20% 2", "shape":"100%", "alpha":"0.5", "color":"#ffffff", "cursor":"url(data/default_pet/cursor_food_apple.gif), auto" },
				"actions":[
					{ "trigger":"load", "action":"pet_bars_food = pet_default_bars_food" },
					{ "trigger":"load", "action":"pet_background = pet_default_baby_background_hype_0" },
					{ "trigger":"interval", "conditional":"actions_button_apple != actions_default_button_apple_selected", "action":"pet_interact = pet_default_baby_interact" },
					{ "trigger":"interval", "conditional":"$hype_food >= 0.25", "action":"pet_interact = pet_default_baby_interact_apple_hype_1" },
					{ "trigger":"interval", "action":"$hype_food += 0.00125" },
					{ "trigger":"hover_start", "probability":"0.1", "action":"pet_chat = pet_default_baby_chat_apple_hype_0" },
					{ "trigger":"hover_start", "action":"$hype_food += 0.0025" }
				]
			}
		],
		"pet_default_baby_interact_apple_hype_1":[
			{
				"layer":{ "geometry":"40% 55% 25% 20% 2", "shape":"100%", "alpha":"0.5", "color":"#00ff00", "cursor":"url(data/default_pet/cursor_food_apple.gif), auto" },
				"actions":[
					{ "trigger":"load", "action":"pet_bars_food = pet_default_bars_food" },
					{ "trigger":"load", "action":"pet_background = pet_default_baby_background_hype_1" },
					{ "trigger":"interval", "conditional":"actions_button_apple != actions_default_button_apple_selected", "action":"pet_interact = pet_default_baby_interact" },
					{ "trigger":"interval", "conditional":"$hype_food <= 0.25", "action":"pet_interact = pet_default_baby_interact_apple_hype_0" },
					{ "trigger":"interval", "conditional":"$hype_food >= 0.5", "action":"pet_interact = pet_default_baby_interact_apple_hype_2" },
					{ "trigger":"interval", "action":"$hype_food += 0.0025" },
					{ "trigger":"hover_start", "probability":"0.1", "action":"pet_chat = pet_default_baby_chat_apple_hype_1" },
					{ "trigger":"hover_start", "action":"$hype_food += 0.00375" },
					{ "trigger":"click", "action":"pet_interact = pet_default_baby_interact_apple_eat" }
				]
			}
		],
		"pet_default_baby_interact_apple_hype_2":[
			{
				"layer":{ "geometry":"40% 55% 25% 20% 2", "shape":"100%", "alpha":"0.5", "color":"#ffff00", "cursor":"url(data/default_pet/cursor_food_apple.gif), auto" },
				"actions":[
					{ "trigger":"load", "action":"pet_bars_food = pet_default_bars_food" },
					{ "trigger":"load", "action":"pet_background = pet_default_baby_background_hype_2" },
					{ "trigger":"interval", "conditional":"actions_button_apple != actions_default_button_apple_selected", "action":"pet_interact = pet_default_baby_interact" },
					{ "trigger":"interval", "conditional":"$hype_food <= 0.5", "action":"pet_interact = pet_default_baby_interact_apple_hype_1" },
					{ "trigger":"interval", "conditional":"$hype_food >= 0.75", "action":"pet_interact = pet_default_baby_interact_apple_hype_3" },
					{ "trigger":"interval", "action":"$hype_food += 0.00375" },
					{ "trigger":"hover_start", "probability":"0.1", "action":"pet_chat = pet_default_baby_chat_apple_hype_2" },
					{ "trigger":"hover_start", "action":"$hype_food += 0.005" },
					{ "trigger":"click", "action":"pet_interact = pet_default_baby_interact_apple_eat" }
				]
			}
		],
		"pet_default_baby_interact_apple_hype_3":[
			{
				"layer":{ "geometry":"40% 55% 25% 20% 2", "shape":"100%", "alpha":"0.5", "color":"#ff0000", "cursor":"url(data/default_pet/cursor_food_apple.gif), auto" },
				"actions":[
					{ "trigger":"load", "action":"pet_bars_food = pet_default_bars_food" },
					{ "trigger":"load", "action":"pet_background = pet_default_baby_background_hype_3" },
					{ "trigger":"interval", "conditional":"actions_button_apple != actions_default_button_apple_selected", "action":"pet_interact = pet_default_baby_interact" },
					{ "trigger":"interval", "conditional":"$hype_food <= 0.75", "action":"pet_interact = pet_default_baby_interact_apple_hype_2" },
					{ "trigger":"interval", "action":"$hype_food += 0.005" },
					{ "trigger":"hover_start", "probability":"0.1", "action":"pet_chat = pet_default_baby_chat_apple_hype_3" },
					{ "trigger":"hover_start", "action":"$hype_food += 0.00625" },
					{ "trigger":"click", "action":"pet_interact = pet_default_baby_interact_apple_eat" }
				]
			}
		],
		"pet_default_baby_interact_apple_eat":[
			{
				"actions":[
					{ "trigger":"load", "action":"pet_bars_food = " },
					{ "trigger":"load", "action":"pet_background = pet_default_baby_background_eat_apple" },
					{ "trigger":"load", "action":"actions_button_apple = " },
					{ "trigger":"load", "probability":"0.5", "action":"pet_chat = pet_default_baby_chat_apple_eat" },
					{ "trigger":"load", "delay":"1", "action":"$food += 0.1" },
					{ "trigger":"load", "delay":"1", "action":"$stock_apple -= 0.01" },
					{ "trigger":"load", "delay":"1", "action":"pet_interact = pet_default_baby_interact" }
				]
			}
		],
