{
	"data_bars":{
		"food":{
			"layer":{ "geometry":"0% 2.5% 100% 2.5% 1", "shape":"10px", "alpha":"1.0", "color1":"#aaaa00", "color2":"#111100", "direction":"right" },
			"text":{ "content_prefix":"Food: ", "content_suffix":"%", "content_multiplier":"100", "color":"#ffffff", "size":"75%" }
		},
		"health":{
			"layer":{ "geometry":"0% 0% 100% 2.5% 1", "shape":"10px", "alpha":"1.0", "color1":"#aa0000", "color2":"#110000", "direction":"right" },
			"text":{ "content_prefix":"Health: ", "content_suffix":"%", "content_multiplier":"100", "color":"#ffffff", "size":"75%" }
		},
		"stock_apple":{
			"layer":{ "geometry":"0% 15% 10% 2.5% 1", "shape":"10px", "alpha":"1.0", "color1":"#aa0000", "color2":"#110000", "direction":"right" },
			"text":{ "content_prefix":"Stock: ", "content_suffix":"", "content_multiplier":"100", "color":"#ffffff", "size":"50%" }
		},
		"tease_food":{
			"layer":{ "geometry":"0% 17.5% 10% 2.5% 1", "shape":"10px", "alpha":"1.0", "color1":"#aaaa00", "color2":"#111100", "direction":"right" },
			"text":{ "content_prefix":"Tease: ", "content_suffix":"%", "content_multiplier":"100", "color":"#ffffff", "size":"50%" }
		}
	},
	"data_sprites":{
		"pet_default_baby_background":[
			{
				"layer":{ "geometry":"0% 20% 100% 80% 1", "alpha":"1.0", "image":"url(data/default_pet/cat_baby.gif)" }
			}
		],
		"pet_default_baby_background_apple_0":[
			{
				"layer":{ "geometry":"0% 20% 100% 80% 1", "alpha":"1.0", "image":"url(data/default_pet/cat_baby.gif)" }
			},
			{
				"layer":{ "geometry":"40% 55% 25% 20% 1", "shape":"100%", "alpha":"0.5", "color":"#ffffff" },
				"actions":[
					{ "trigger":"interval", "conditional":"tease_food >= 0.25", "action":"sprite_pet_background = pet_default_baby_background_apple_1" },
					{ "trigger":"hover_start", "conditional":"stock_apple >= 0.01", "probability":"0.1", "action":"sprite_pet_text = pet_default_baby_text_apple_hover_0" },
					{ "trigger":"hover_start", "conditional":"stock_apple >= 0.01", "action":"tease_food += 0.005" }
				]
			}
		],
		"pet_default_baby_background_apple_1":[
			{
				"layer":{ "geometry":"0% 20% 100% 80% 1", "alpha":"1.0", "image":"url(data/default_pet/cat_baby.gif)" }
			},
			{
				"layer":{ "geometry":"40% 55% 25% 20% 1", "shape":"100%", "alpha":"0.5", "color":"#00ff00" },
				"actions":[
					{ "trigger":"interval", "conditional":"tease_food <= 0.25", "action":"sprite_pet_background = pet_default_baby_background_apple_0" },
					{ "trigger":"interval", "conditional":"tease_food >= 0.5", "action":"sprite_pet_background = pet_default_baby_background_apple_2" },
					{ "trigger":"hover_start", "conditional":"stock_apple >= 0.01", "probability":"0.1", "action":"sprite_pet_text = pet_default_baby_text_apple_hover_1" },
					{ "trigger":"hover_start", "conditional":"stock_apple >= 0.01", "action":"tease_food += 0.005" },
					{ "trigger":"click", "conditional":"stock_apple >= 0.01", "action":"sprite_pet_background = pet_default_baby_background_apple_eating" },
					{ "trigger":"click", "conditional":"stock_apple >= 0.01", "action":"sprite_pet_background = pet_default_baby_background_apple_1", "delay":"5" },
					{ "trigger":"click", "conditional":"stock_apple >= 0.01", "action":"food += 0.25", "delay":"5" },
					{ "trigger":"click", "conditional":"stock_apple >= 0.01", "action":"stock_apple -= 0.01", "delay":"5" }
				]
			}
		],
		"pet_default_baby_background_apple_2":[
			{
				"layer":{ "geometry":"0% 20% 100% 80% 1", "alpha":"1.0", "image":"url(data/default_pet/cat_baby.gif)" }
			},
			{
				"layer":{ "geometry":"40% 55% 25% 20% 1", "shape":"100%", "alpha":"0.5", "color":"#ffff00" },
				"actions":[
					{ "trigger":"interval", "conditional":"tease_food <= 0.5", "action":"sprite_pet_background = pet_default_baby_background_apple_1" },
					{ "trigger":"interval", "conditional":"tease_food >= 0.75", "action":"sprite_pet_background = pet_default_baby_background_apple_3" },
					{ "trigger":"hover_start", "conditional":"stock_apple >= 0.01", "probability":"0.1", "action":"sprite_pet_text = pet_default_baby_text_apple_hover_2" },
					{ "trigger":"hover_start", "conditional":"stock_apple >= 0.01", "action":"tease_food += 0.005" },
					{ "trigger":"click", "conditional":"stock_apple >= 0.01", "action":"sprite_pet_background = pet_default_baby_background_apple_eating" },
					{ "trigger":"click", "conditional":"stock_apple >= 0.01", "action":"sprite_pet_background = pet_default_baby_background_apple_2", "delay":"2.5" },
					{ "trigger":"click", "conditional":"stock_apple >= 0.01", "action":"food += 0.25", "delay":"2.5" },
					{ "trigger":"click", "conditional":"stock_apple >= 0.01", "action":"stock_apple -= 0.01", "delay":"2.5" }
				]
			}
		],
		"pet_default_baby_background_apple_3":[
			{
				"layer":{ "geometry":"0% 20% 100% 80% 1", "alpha":"1.0", "image":"url(data/default_pet/cat_baby.gif)" }
			},
			{
				"layer":{ "geometry":"40% 55% 25% 20% 1", "shape":"100%", "alpha":"0.5", "color":"#ff0000" },
				"actions":[
					{ "trigger":"interval", "conditional":"tease_food <= 0.75", "action":"sprite_pet_background = pet_default_baby_background_apple_2" },
					{ "trigger":"hover_start", "conditional":"stock_apple >= 0.01", "probability":"0.1", "action":"sprite_pet_text = pet_default_baby_text_apple_hover_3" },
					{ "trigger":"hover_start", "conditional":"stock_apple >= 0.01", "action":"tease_food += 0.005" },
					{ "trigger":"click", "conditional":"stock_apple >= 0.01", "action":"sprite_pet_background = pet_default_baby_background_apple_eating" },
					{ "trigger":"click", "conditional":"stock_apple >= 0.01", "action":"sprite_pet_background = pet_default_baby_background_apple_3", "delay":"1" },
					{ "trigger":"click", "conditional":"stock_apple >= 0.01", "action":"food += 0.25", "delay":"1" },
					{ "trigger":"click", "conditional":"stock_apple >= 0.01", "action":"stock_apple -= 0.01", "delay":"1" }
				]
			}
		],
		"pet_default_baby_background_apple_eating":[
			{
				"layer":{ "geometry":"0% 20% 100% 80% 1", "alpha":"1.0", "image":"url(data/default_pet/cat_baby_sleep.gif)" }
			}
		],
		"pet_default_baby_menu":[
			{
				"layer":{ "geometry":"10% 7.5% 5% 5% 1", "shape":"100%", "alpha":"0.75", "color":"#000000" },
				"actions":[
					{ "trigger":"load", "action":"bar_stock_apple = " },
					{ "trigger":"hover_start", "action":"sprite_pet_menu = pet_default_baby_menu_apple" }
				]
			}
		],
		"pet_default_baby_menu_apple":[
			{
				"layer":{ "geometry":"0% 5% 10% 10% 1", "shape":"100%", "alpha":"1.0", "color":"#000000" },
				"actions":[
					{ "trigger":"load", "action":"bar_stock_apple = stock_apple" }
				]
			},
			{
				"layer":{ "geometry":"10% 7.5% 5% 5% 1", "shape":"100%", "alpha":"1.0", "color":"#000000" },
				"actions":[
					{ "trigger":"hover_end", "action":"sprite_pet_menu = pet_default_baby_menu" },
					{ "trigger":"click", "action":"sprite_pet_menu = pet_default_baby_menu_apple_selected" }
				]
			}

		],
		"pet_default_baby_menu_apple_selected":[
			{
				"layer":{ "geometry":"0% 5% 10% 10% 1", "shape":"100%", "alpha":"1.0", "color":"#000000" },
				"actions":[
					{ "trigger":"load", "action":"sprite_pet_background = pet_default_baby_background_apple_0" },
					{ "trigger":"load", "action":"bar_stock_apple = stock_apple" },
					{ "trigger":"click", "action":"sprite_pet_menu = " },
					{ "trigger":"click", "action":"sprite_pet_background = pet_default_baby_background" }
				]
			}
		],
		"pet_default_baby_text":[{}],
		"pet_default_baby_text_apple_hover_0":[
